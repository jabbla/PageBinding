{
    "compilerOptions": {
        "module": "es2015",
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "lib": ["es5", "es6", "dom"],
        "moduleResolution": "node"
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "babelOptions": {
            "babelrc": true, /* Important line */
        },
        "babelCore": "@babel/core",
    },
    "include": [
        "**/*"
    ]
}